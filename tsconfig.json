{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,

		"target": "es5",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,

		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "src/blueprints/**/*", "./src/tests/**/*"]
}
