{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"target": "es5",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist/declarations"
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"src/blueprints/**/*",
		"./src/tests/**/*"
	]
}
